@model Clinic.Web.Models.ViewModels.LoginVM

@{
    ViewData["Title"] = "تسجيل الدخول";
    Layout = "_LayoutAuth";
}
@section Css {
    <style>

        body {
            background: linear-gradient(90deg, rgba(255,255,255,1) 0%, rgba(252,252,252,1) 32%, rgba(228,228,228,1) 100%);
        }

        .login {
            width: 360px;
            padding: 8% 0 0;
            margin: auto;
            font-family: 'Comfortaa', cursive;
        }

        .form {
            position: relative;
            z-index: 1;
            background: #FFFFFF;
            border-radius: 10px;
            max-width: 360px;
            margin: 0 auto 100px;
            padding: 45px;
            text-align: center;
        }

            .form input {
                outline: 0;
                background: #f2f2f2;
                width: 100%;
                border: 0;
                border-radius: 5px;
                margin: 0 15px 0 0;
                padding: 15px;
                box-sizing: border-box;
                font-size: 14px;
                font-family: 'Comfortaa', cursive;
            }

                .form input:focus {
                    background: #dbdbdb;
                }

            .form button {
                font-family: 'Comfortaa', cursive;
                text-transform: uppercase;
                outline: 0;
                background: #964f13;
                width: 100%;
                border: 0;
                border-radius: 5px;
                padding: 15px;
                color: #FFFFFF;
                font-size: 14px;
                -webkit-transition: all 0.3 ease;
                transition: all 0.3 ease;
                cursor: pointer;
            }

                .form button:active {
                    background: #964f13;
                }

            .form .material-icons {
                font-size: 20px;
                color: #964f13;
            }
    </style>
}
<div class="login">
    <div class="form">
        <form class="login-form" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">
            <span class="material-icons">تسجيل الدخول لموقع المتحف</span>
            <div class="form-group text-right mt-5">
                <input asp-for="Username" placeholder="اسم المستخدم" dir="rtl" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group text-right">
                <input asp-for="Password" placeholder="كلمة المرور" dir="rtl" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group text-right">
                <span>تذكرني</span>
                <label class="checkbox checkbox-primary">
                    <input type="checkbox" asp-for="RememberMe">
                </label>
            </div>
            <button type="submit">تسجيل دخول</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
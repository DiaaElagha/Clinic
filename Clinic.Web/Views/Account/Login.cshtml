@model Clinic.Web.Models.ViewModels.LoginVM

@{
    ViewData["Title"] = "تسجيل الدخول";
    Layout = "_Layout_Auth";
}
@section Css {
    <style>
    </style>
}

<section>
    <div class="page-header min-vh-75">
        <div class="container">
            <div class="row">
                <div class="col-xl-4 col-lg-5 col-md-6 d-flex flex-column mx-auto">
                    <div class="card card-plain mt-8">
                        <div class="card-header pb-0 text-left bg-transparent">
                            <h3 class="font-weight-bolder text-info text-gradient">مرحبًا بعودتك</h3>
                            <p class="mb-0">أدخل اسم المستخدم وكلمة المرور لتسجيل الدخول</p>
                        </div>
                        <div class="card-body">
                            <form role="form" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <label>اسم المستخدم</label>
                                <div class="mb-3">
                                    <input asp-for="Username" class="form-control" placeholder="ادخل اسم المستخدم" aria-label="Email" aria-describedby="email-addon">
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <label>كلمة المرور</label>
                                <div class="mb-3">
                                    <input asp-for="Password" class="form-control" placeholder="ادخل كلمة المرور" aria-label="Password" aria-describedby="password-addon">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-check form-switch">
                                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe">
                                    <label class="form-check-label" for="rememberMe">تذكرني</label>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn bg-gradient-info w-100 mt-4 mb-0">تسجيل الدخول</button>
                                </div>
                            </form>
                        </div>
                        <div class="card-footer text-center pt-0 px-lg-2 px-1">
                            <p class="mb-4 text-sm mx-auto">
                                هل نسيت كلمة المرور؟
                                <a href="javascript:;" class="text-info text-gradient font-weight-bold">استرجاع</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}